{
	"name": "@repo/auth-server",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "tsx watch --env-file=.env src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"auth:generate": "npx @better-auth/cli generate --output ../../packages/database/src/schema/auth.ts --yes"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.5",
		"@repo/database": "workspace:*",
		"@t3-oss/env-core": "^0.13.8",
		"better-auth": "^1.3.27",
		"hono": "^4.9.12",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.27",
		"@biomejs/biome": "^2.2.6",
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^24.7.2",
		"dotenv": "^17.2.3",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
